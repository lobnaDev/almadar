<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.il.almadar.MyappintmentFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Services History"
            android:padding="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:id="@+id/textview" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maintenance History"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:drawableRight="@drawable/maintan_ic"
            android:background="@drawable/button_selector"
            android:id="@+id/buttonMaintenance" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Wash Appointments"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:drawableRight="@drawable/wash_ic"
            android:background="@drawable/button_selector"
            android:id="@+id/buttonAppintment" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problems History"
            android:padding="10dp"
            android:drawableRight="@drawable/problem_ic"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_selector"
            android:id="@+id/buttonProblem" />

    </LinearLayout>


</FrameLayout>
