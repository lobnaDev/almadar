<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.il.almadar.MaintenanceStep2Activity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maintenance Information"
        android:id="@+id/textView5"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="20dp"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Info:"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView5"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editMainTVCarInfo"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Requested:"
        android:id="@+id/textView9"
        android:layout_marginBottom="3dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/editMainTVService"
        android:layout_below="@+id/textView9"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:layout_marginBottom="3dp"

        android:id="@+id/textView10"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editMainTVService"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No description was given"
        android:id="@+id/editMainTVDesc"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:lines="4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technician Info:"
        android:id="@+id/textView17"
        android:layout_marginBottom="3dp"

        android:layout_below="@+id/editMainTVDesc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No technician was assigned yet"
        android:id="@+id/editMainTVTechn"
        android:layout_below="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editMainTVDesc"
        android:layout_marginBottom="10dp"
        android:layout_alignEnd="@+id/editMainTVDesc"
        android:lines="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" : "
        android:id="@+id/editMainTVStatus"
        android:layout_below="@+id/editMainTVTechn"
        android:layout_toRightOf="@+id/textView18"
        android:layout_toEndOf="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: "
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView18"
        android:textColor="@color/colorPrimary"
        android:layout_alignTop="@+id/editMainTVStatus"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technician Comment:"
        android:id="@+id/textView19"
        android:layout_marginBottom="3dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/editMainTVStatus"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="4"
        android:text="No comments were given"
        android:id="@+id/editMainTVComment"
        android:layout_below="@+id/textView19"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat With Technician"
        android:id="@+id/buttonChat"
        android:layout_below="@+id/editMainTVComment"
        android:background="@drawable/button_selector"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:drawableRight="@drawable/chat"
        android:layout_alignRight="@+id/editMainTVComment"
        android:layout_alignEnd="@+id/editMainTVComment" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call Technician"
        android:id="@+id/buttonCallTech"
        android:background="@drawable/button_selector"
        android:layout_below="@+id/buttonChat"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:drawableRight="@drawable/phone"
        android:drawablePadding="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Request"
        android:id="@+id/buttonCancelRequest"
        android:layout_below="@+id/buttonCallTech"
        android:layout_alignRight="@+id/buttonCallTech"
        android:layout_alignEnd="@+id/buttonCallTech"
        android:layout_alignLeft="@+id/buttonCallTech"
        android:background="@drawable/button_red_selector"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/delete"
        android:layout_alignStart="@+id/buttonCallTech" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:id="@+id/editMainTVDate"
        android:layout_above="@+id/textView8"
        android:textColor="@color/accent_material_light"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
</ScrollView>